{
    "compilerOptions": {
      "noEmitOnError": false,
      "skipLibCheck": true,
      "strict": false,
      "noImplicitAny": false,
      "jsx": "react",
      "target": "ES6",
      "module": "commonjs",
      "lib": ["ES6", "ES2015", "ESNEXT", "dom"],
      "outDir": "lib",
      "rootDir": "./script",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true
    },
    "exclude": [
      "node_modules",
      "lib",
      "test",
      "Example",
      "src",
    ]
  }